<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikhail.creditexpress">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name="com.mikhail.creditexpress.activities.CreditActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity android:name="com.mikhail.creditexpress.activities.ListClickActivity" />
        <activity android:name="com.mikhail.creditexpress.activities.FilterActivity" />
        <activity android:name="com.mikhail.creditexpress.activities.FilterResultActivity" />
        <activity android:name="com.mikhail.creditexpress.activities.FeedBackActivity" />
        <activity android:name="com.mikhail.creditexpress.activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:name="com.mikhail.creditexpress.activities.PromotionActivity" />

    </application>
</manifest>
